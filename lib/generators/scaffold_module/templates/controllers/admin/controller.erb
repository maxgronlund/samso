class Admin::<%= plural_name.classify %>ModulesController < AdminController
  before_action :set_admin_<%= file_name %>_module, only: %i[edit update destroy]

  def edit
  end

  def update
    if @<%= file_name %>_module.update(<%= file_name %>_module_params)
      @<%= file_name %>_module.
        .update_page_col_module(
          <%= file_name %>_module_params
        )
      redirect_to admin_page_path(@<%= file_name %>_module.page)
    else
      render :edit
    end
  end

  def destroy
    @<%= file_name %>.destroy
    redirect_to admin_<%= file_name %>_modules_url
  end

  private

  # Use callbacks to share common setup or constraints between actions.
  def set_admin_<%= file_name %>_module
    @<%= file_name %>_module = Admin::<%= file_name.classify %>Module.find(params[:id])
  end

  # Never trust parameters from the scary internet, only allow the white list through.
  def <%= file_name %>_module_params
    params.require(:admin_<%= file_name %>_module).permit(
      :position,
      :name,
      :access_to
    )
  end
end
