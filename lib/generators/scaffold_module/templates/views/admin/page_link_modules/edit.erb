.row
  h3 = t('edit_model', model_name: @<%= file_name %>_module.model_name.human)

= simple_form_for [:admin, @<%= file_name %>_module], url: url_for(action: 'update', controller: 'admin/<%= file_name %>_modules'), method: 'put' do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-sm-3
        = f.input :position, as: :integer
      .col-sm-3
        = f.input :name


  .form-actions
    = f.submit t('save'), class: 'btn btn-primary', data: { disable_with: t('please_wait') }
