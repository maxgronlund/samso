<% if @comment.persisted? %>
  $("#comment-error").empty();
  $('#new_comment_form').val("");
  $("#add-comment").prepend('<%=j render "comments/comment", comment: @comment %>');
  $('#destroy_comment_' + "<%= @comment.id %>").css("background-color", "#eee");
  $('#destroy_comment_' + "<%= @comment.id %>").css("padding", "10px");

<% else %>
  $("#comment-error").empty();
  $("#comment-error").prepend('<%=j render "comments/error" %>');
<% end %>